{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "lightGreen",
          "template": "{{ .Icon }} <lightYellow>{{ .UserName }}</><#666666>@</>{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "lightCyan",
          "properties": {
            "style": "full"
          },
          "template": "<#666666>in</> {{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ff94df",
          "template": "<#666666>on</> {{ .HEAD }}{{ if gt .StashCount 0 }} \u25B6 {{ .StashCount }}{{ end }} ❯❯ {{ .UpstreamIcon }} ",
          "properties": {
            "branch_icon": "\ue0a0 ",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#ffffff",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "lightYellow",
          "template": "<#666666>took</> {{ .FormattedMs }} ",
          "properties": {
            "style": "round",
            "threshold": 1000
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "foreground": "lightGreen",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "style": "plain",
          "template": "❯"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
